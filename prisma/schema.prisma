generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model cliente {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  cpf      String
  email    String
  nome     String
  telefone String
}

model funcionario {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  cargo     String
  cpf       String
  data_nasc DateTime @db.Date
  email     String
  nome      String
  root      Boolean
  senha     String
  telefone  String
}

model vaga {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  clienteId      String
  dataLocacao    DateTime @db.Date
  dataLocacaoFim DateTime @db.Date
  nome           String
  preco          Float
  setor          String
  tipo           String
  vaga_ocupada   String
}

model veiculo {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  categoria String
  cor       String
  cpf       String
  modelo    String
  placa     String
}
